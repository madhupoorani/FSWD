import React from "react";

function CabBooking() {

  const bookCab = () => {
    const name = prompt("Enter your name:");
    if (!name) {
      alert("Name is required!");
      return;
    }

    const pickup = prompt("Enter Pickup Location:");
    if (!pickup) {
      alert("Pickup location is required!");
      return;
    }

    const drop = prompt("Enter Drop Location:");
    if (!drop) {
      alert("Drop location is required!");
      return;
    }

    const cabType = prompt("Enter Cab Type (Mini / Sedan / SUV):");
    if (!cabType) {
      alert("Cab type is required!");
      return;
    }

    let farePerKm = 0;

    if (cabType.toLowerCase() === "mini") farePerKm = 10;
    else if (cabType.toLowerCase() === "sedan") farePerKm = 15;
    else if (cabType.toLowerCase() === "suv") farePerKm = 20;
    else {
      alert("Invalid cab type!");
      return;
    }

    const distance = prompt("Enter distance in km:");
    if (!distance || isNaN(distance)) {
      alert("Please enter a valid distance!");
      return;
    }

    const totalFare = distance * farePerKm;

    const confirmBooking = confirm(
      `Confirm Your Ride:\n\n` +
      `Name: ${name}\n` +
      `From: ${pickup}\n` +
      `To: ${drop}\n` +
      `Cab Type: ${cabType}\n` +
      `Distance: ${distance} km\n` +
      `Total Fare: ₹${totalFare}`
    );

    if (confirmBooking) {
      alert(`✅ Booking Confirmed!\n\nDriver will contact you shortly.\nHappy Journey, ${name}!`);
    } else {
      alert("❌ Booking Cancelled.");
    }
  };

  return (
    <div style={{ textAlign: "center", marginTop: "100px" }}>
      <h2>Online Cab Booking System</h2>
      <button onClick={bookCab} style={{ padding: "12px 25px" }}>
        Book Cab
      </button>
    </div>
  );
}

export default CabBooking;
